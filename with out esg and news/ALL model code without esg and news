        "from sklearn.preprocessing import MinMaxScaler, StandardScaler\n",
        "from sklearn.metrics import mean_squared_error, mean_absolute_error, r2_score\n",
        "from sklearn.svm import SVR\n",
        "from xgboost import XGBRegressor\n",
        "\n",
        "from tensorflow.keras.models import Sequential\n",
        "from tensorflow.keras.layers import Dense, LSTM, Dropout\n",
        "from tensorflow.keras.callbacks import EarlyStopping\n",
        "\n",
        "# ======================================================\n",
        "# 1. CONFIGURATION\n",
        "# ======================================================\n",
        "\n",
        "START_DATE = \"2019-01-01\"\n",
        "END_DATE = \"2024-12-31\"\n",
        "LOOKBACK = 30  # days of history to predict next day\n",
        "\n",
        "# Mapping from your company/index name -> ticker, model, tuned/initial\n",
        "# NOTE: For ADRs/indices tickers may differ based on your data source/exchange.\n",
        "assets_config = {\n",
        "    \"Amazon\":      {\"ticker\": \"AMZN\",   \"model\": \"ann\", \"tuned\": False},   # Initial ANN\n",
        "    \"Apple\":       {\"ticker\": \"AAPL\",   \"model\": \"svm\", \"tuned\": True},    # SVM (Tuned)\n",
        "    \"AstraZeneca\": {\"ticker\": \"AZN\",    \"model\": \"lstm\", \"tuned\": False},  # Initial LSTM\n",
        "    \"FTSE 100\":    {\"ticker\": \"^FTSE\",  \"model\": \"lstm\", \"tuned\": False},  # Initial LSTM\n",
        "    \"Google\":      {\"ticker\": \"GOOGL\",  \"model\": \"ann\", \"tuned\": True},    # ANN (Tuned)\n",
        "    \"HSBC\":        {\"ticker\": \"HSBC\",   \"model\": \"ann\", \"tuned\": False},   # Initial ANN\n",
        "    \"Hitachi\":     {\"ticker\": \"HTHIY\",  \"model\": \"ann\", \"tuned\": False},   # Initial ANN (US ADR)\n",
        "    \"Linde\":       {\"ticker\": \"LIN\",    \"model\": \"lstm\", \"tuned\": True},   # Tuned LSTM\n",
        "    \"MUFG\":        {\"ticker\": \"MUFG\",   \"model\": \"lstm\", \"tuned\": True},   # Tuned LSTM\n",
        "    \"Microsoft\":   {\"ticker\": \"MSFT\",   \"model\": \"svr\", \"tuned\": True},    # Tuned SVR\n",
        "    \"NVIDIA\":      {\"ticker\": \"NVDA\",   \"model\": \"ann\", \"tuned\": True},    # Tuned ANN\n",
        "    \"Nikkei\":      {\"ticker\": \"^N225\",  \"model\": \"ann\", \"tuned\": False},   # Initial ANN\n",
        "    \"Nintendo\":    {\"ticker\": \"NTDOY\",  \"model\": \"svr\", \"tuned\": True},    # Tuned SVR\n",
        "    \"S&P 500\":     {\"ticker\": \"^GSPC\",  \"model\": \"ann\", \"tuned\": True},    # Tuned ANN\n",
        "    \"Shell\":       {\"ticker\": \"SHEL\",   \"model\": \"lstm\", \"tuned\": False},  # Initial LSTM\n",
        "    \"Sony\":        {\"ticker\": \"SONY\",   \"model\": \"lstm\", \"tuned\": True},   # LSTM_Tuned\n",
        "    \"Toyota\":      {\"ticker\": \"TM\",     \"model\": \"lstm\", \"tuned\": False},  # Initial LSTM\n",
        "    \"Unilever\":    {\"ticker\": \"UL\",     \"model\": \"xgb\", \"tuned\": True}     # XGBoost (Tuned)\n",
        "}\n",
        "\n",
        "\n",
        "# ======================================================\n",
        "# 2. DATA PREP HELPERS\n",
        "# ======================================================\n",
        "\n",
        "def download_close_prices(ticker, start, end):\n",
        "    \"\"\"Download daily close price using yfinance.\"\"\"\n",
        "    data = yf.download(ticker, start=start, end=end)\n",
        "    if data.empty:\n",
        "        raise ValueError(f\"No data returned for {ticker}\")\n",
        "    close = data[\"Close\"].dropna()\n",
        "    return close\n",
        "\n",
        "\n",
        "def create_supervised_series(series, lookback):\n",
        "    \"\"\"\n",
        "    Convert a 1D series into supervised (X, y) for next-day prediction\n",
        "    using a sliding window.\n",
        "    \"\"\"\n",
        "    X, y = [], []\n",
        "    values = series.values\n",
        "    for i in range(len(values) - lookback):\n",
        "        X.append(values[i:i + lookback])\n",
        "        y.append(values[i + lookback])\n",
        "    return np.array(X), np.array(y)\n",
        "\n",
        "\n",
        "def train_test_split_time_series(X, y, test_size=0.2):\n",
        "    \"\"\"Time-series aware split (no shuffle).\"\"\"\n",
        "    split_index = int(len(X) * (1 - test_size))\n",
        "    X_train, X_test = X[:split_index], X[split_index:]\n",
        "    y_train, y_test = y[:split_index], y[split_index:]\n",
        "    return X_train, X_test, y_train, y_test\n",
        "\n",
        "\n",
        "# ======================================================\n",
        "# 3. MODEL BUILDERS\n",
        "# ======================================================\n",
        "\n",
        "def build_ann(input_dim, tuned=False):\n",
        "    model = Sequential()\n",
        "    if not tuned:\n",
        "        # Initial (simpler) ANN\n",
        "        model.add(Dense(32, activation='relu', input_dim=input_dim))\n",
        "        model.add(Dense(16, activation='relu'))\n",
        "    else:\n",
        "        # Tuned (slightly deeper & larger)\n",
        "        model.add(Dense(64, activation='relu', input_dim=input_dim))\n",
        "        model.add(Dropout(0.2))\n",
        "        model.add(Dense(32, activation='relu'))\n",
        "        model.add(Dense(16, activation='relu'))\n",
        "    model.add(Dense(1))  # output layer\n",
        "    model.compile(optimizer='adam', loss='mse')\n",
        "    return model\n",
        "\n",
        "\n",
        "def build_lstm(input_shape, tuned=False):\n",
        "    model = Sequential()\n",
        "    if not tuned:\n",
        "        # Initial LSTM\n",
        "        model.add(LSTM(32, input_shape=input_shape))\n",
        "    else:\n",
        "        # Tuned LSTM (stacked + dropout)\n",
        "        model.add(LSTM(64, return_sequences=True, input_shape=input_shape))\n",
        "        model.add(Dropout(0.2))\n",
        "        model.add(LSTM(32))\n",
        "    model.add(Dense(1))\n",
        "    model.compile(optimizer='adam', loss='mse')\n",
        "    return model\n",
        "\n",
        "\n",
        "def build_svr(tuned=False):\n",
        "    \"\"\"\n",
        "    SVR used both for 'SVM (Tuned)' and 'SVR (Tuned/Initial)' labels,\n",
        "    targeting price (regression).\n",
        "    \"\"\"\n",
        "    if not tuned:\n",
        "        return SVR(kernel='rbf', C=1.0, epsilon=0.1)\n",
        "    else:\n",
        "        # Example tuned hyperparameters\n",
        "        return SVR(kernel='rbf', C=100.0, epsilon=0.01, gamma='scale')\n",
        "\n",
        "\n",
        "def build_xgb(tuned=False):\n",
        "    if not tuned:\n",
        "        return XGBRegressor(\n",
        "            n_estimators=200,\n",
        "            max_depth=3,\n",
        "            learning_rate=0.1,\n",
        "            subsample=0.8,\n",
        "            colsample_bytree=0.8,\n",
        "            objective='reg:squarederror'\n",
        "        )\n",
        "    else:\n",
        "        return XGBRegressor(\n",
        "            n_estimators=500,\n",
        "            max_depth=5,\n",
        "            learning_rate=0.03,\n",
        "            subsample=0.9,\n",
        "            colsample_bytree=0.9,\n",
        "            reg_lambda=1.0,\n",
        "            reg_alpha=0.1,\n",
        "            objective='reg:squarederror'\n",
        "        )\n",
        "\n",
        "\n",
        "# ======================================================\n",
        "# 4. TRAINING PIPELINE PER ASSET\n",
        "# ======================================================\n",
        "\n",
        "def train_and_predict_for_asset(asset_name, config):\n",
        "    ticker = config[\"ticker\"]\n",
        "    model_type = config[\"model\"]   # 'ann', 'lstm', 'svm', 'svr', 'xgb'\n",
        "    tuned = config[\"tuned\"]\n",
        "\n",
        "    print(f\"\\n==============================\")\n",
        "    print(f\"{asset_name} ({ticker}) -> {model_type.upper()} | {'TUNED' if tuned else 'INITIAL'}\")\n",
        "    print(f\"==============================\")\n",
        "\n",
        "    # ---------- 4.1 Download data ----------\n",
        "    close = download_close_prices(ticker, START_DATE, END_DATE)\n",
        "    print(f\"Data points: {len(close)} from {close.index[0].date()} to {close.index[-1].date()}\")\n",
        "\n",
        "    # ---------- 4.2 Scale data ----------\n",
        "    scaler = MinMaxScaler(feature_range=(0, 1))\n",
        "    close_scaled = scaler.fit_transform(close.values.reshape(-1, 1)).flatten()\n",
        "\n",
        "    # ---------- 4.3 Supervised dataset ----------\n",
        "    X, y = create_supervised_series(pd.Series(close_scaled), LOOKBACK)\n",
        "    X_train, X_test, y_train, y_test = train_test_split_time_series(X, y, test_size=0.2)\n",
        "\n",
        "    # ---------- 4.4 Shape adjustment ----------\n",
        "    # For ANN, SVR, XGB => (samples, features)\n",
        "    # For LSTM => (samples, timesteps, features=1)\n",
        "    if model_type == \"lstm\":\n",
        "        X_train_model = X_train.reshape((X_train.shape[0], X_train.shape[1], 1))\n",
        "        X_test_model = X_test.reshape((X_test.shape[0], X_test.shape[1], 1))\n",
        "    else:\n",
        "        X_train_model = X_train\n",
        "        X_test_model = X_test\n",
        "\n",
        "    # ---------- 4.5 Build model ----------\n",
        "    if model_type == \"ann\":\n",
        "        model = build_ann(input_dim=X_train_model.shape[1], tuned=tuned)\n",
        "        es = EarlyStopping(monitor='val_loss', patience=10, restore_best_weights=True)\n",
        "        history = model.fit(\n",
        "            X_train_model, y_train,\n",
        "            epochs=100 if tuned else 50,\n",
        "            batch_size=32,\n",
        "            validation_split=0.1,\n",
        "            callbacks=[es],\n",
        "            verbose=0\n",
        "        )\n",
        "        y_pred_scaled = model.predict(X_test_model).flatten()\n",
        "\n",
        "    elif model_type == \"lstm\":\n",
        "        model = build_lstm(input_shape=(X_train_model.shape[1], 1), tuned=tuned)\n",
        "        es = EarlyStopping(monitor='val_loss', patience=10, restore_best_weights=True)\n",
        "        history = model.fit(\n",
        "            X_train_model, y_train,\n",
        "            epochs=100 if tuned else 50,\n",
        "            batch_size=32,\n",
        "            validation_split=0.1,\n",
        "            callbacks=[es],\n",
        "            verbose=0\n",
        "        )\n",
        "        y_pred_scaled = model.predict(X_test_model).flatten()\n",
        "\n",
        "    elif model_type in [\"svm\", \"svr\"]:\n",
        "        # SVR uses raw X (already scaled with MinMax on price only)\n",
        "        reg = build_svr(tuned=tuned)\n",
        "        reg.fit(X_train_model, y_train)\n",
        "        y_pred_scaled = reg.predict(X_test_model)\n",
        "\n",
        "    elif model_type == \"xgb\":\n",
        "        reg = build_xgb(tuned=tuned)\n",
        "        reg.fit(X_train_model, y_train)\n",
        "        y_pred_scaled = reg.predict(X_test_model)\n",
        "\n",
        "    else:\n",
        "        raise ValueError(f\"Unknown model type: {model_type}\")\n",
        "\n",
        "    # ---------- 4.6 Inverse scaling ----------\n",
        "    # y values are in the scaled space, we invert to original price\n",
        "    # Build arrays of shape (n_samples, 1) to inverse_transform\n",
        "    y_test_prices = scaler.inverse_transform(y_test.reshape(-1, 1)).flatten()\n",
        "    y_pred_prices = scaler.inverse_transform(y_pred_scaled.reshape(-1, 1)).flatten()\n",
        "\n",
        "    # ---------- 4.7 Metrics ----------\n",
        "    rmse = np.sqrt(mean_squared_error(y_test_prices, y_pred_prices))\n",
        "    mae = mean_absolute_error(y_test_prices, y_pred_prices)\n",
        "    r2 = r2_score(y_test_prices, y_pred_prices)\n",
        "\n",
        "    print(f\"RMSE: {rmse:.4f}\")\n",
        "    print(f\"MAE : {mae:.4f}\")\n",
        "    print(f\"R²  : {r2:.4f}\")\n",
        "\n",
        "    # ---------- 4.8 Next-day prediction ----------\n",
        "    last_window_scaled = close_scaled[-LOOKBACK:]  # last 30 days scaled\n",
        "    if model_type == \"lstm\":\n",
        "        last_window_input = last_window_scaled.reshape((1, LOOKBACK, 1))\n",
        "        next_day_scaled = model.predict(last_window_input)[0, 0]\n",
        "    else:\n",
        "        last_window_input = last_window_scaled.reshape(1, -1)\n",
        "        if model_type in [\"ann\", \"lstm\"]:  # already handled; but keep clear\n",
        "            next_day_scaled = model.predict(last_window_input)[0]\n",
        "        elif model_type in [\"svm\", \"svr\", \"xgb\"]:\n",
        "            next_day_scaled = reg.predict(last_window_input)[0]\n",
        "        else:\n",
        "            raise ValueError(\"Unexpected model type when forecasting.\")\n",
        "\n",
        "    next_day_price = scaler.inverse_transform([[next_day_scaled]])[0, 0]\n",
        "    print(f\"Predicted next-day closing price: {next_day_price:.4f}\")\n",
        "\n",
        "    return {\n",
        "        \"asset\": asset_name,\n",
        "        \"ticker\": ticker,\n",
        "        \"rmse\": rmse,\n",
        "        \"mae\": mae,\n",
        "        \"r2\": r2,\n",
        "        \"next_day_price\": next_day_price\n",
        "    }\n",
        "\n",
        "\n",
        "# ======================================================\n",
        "# 5. RUN FOR ALL ASSETS\n",
        "# ======================================================\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    results = []\n",
        "\n",
        "    for asset_name, cfg in assets_config.items():\n",
        "        try:\n",
        "            res = train_and_predict_for_asset(asset_name, cfg)\n",
        "            results.append(res)\n",
        "        except Exception as e:\n",
        "            print(f\"⚠️ Error for {asset_name}: {e}\")\n",
        "\n",
        "    # Summary table\n",
        "    if results:\n",
        "        df_results = pd.DataFrame(results)\n",
        "        print(\"\\n\\n====== SUMMARY RESULTS ======\")\n",
        "        print(df_results[[\"asset\", \"ticker\", \"rmse\", \"mae\", \"r2\", \"next_day_price\"]])\n"
      ]
    },
    {
